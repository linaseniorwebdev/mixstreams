doctype html
html(lang="en")
	head
		meta(name="description", content="Mixing Tracks v1.0")
		block title
			title Mixing Tracks
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='icon', type='image/png', sizes='16x16', href='favicon.png')
		link(rel='stylesheet', type='text/css', href='vendors/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', type='text/css', href='vendors/@fortawesome/fontawesome-free/css/all.min.css')
		link(rel='stylesheet', type='text/css', href='stylesheets/background.css')
		link(rel='stylesheet', type='text/css', href='core/css/style.css')
		link(rel='stylesheet', type='text/css', href='core/css/components.css')
		style.
			.center-div {
				color: white;
				left: 50%;
				position: absolute;
				top: 45%;
				transform: translateX(-50%) translateY(-50%);
			}

			.bottom-div {
				background-color: black;
				bottom: 0;
				height: 100px;
				left: 0;
				opacity: 0.75;
				position: absolute;
				width: 100%;
			}

			.top-div {
				background-color: rgba(0, 0, 0, 0.75);
				top: 0;
				height: 60px;
				left: 0;
				position: absolute;
				width: 100%;
				padding: 7px 15px;
				font-size: 1rem;
			}

			.bottom-text {
				bottom: 15px;
				color: white;
				position: absolute;
				left: 0;
				width: 100%;
			}
			
			.bottom-text > a {
				color: white;
				margin-left: 5px;
				margin-right: 5px;
				text-decoration: none;
			}

			.nav-link {
				color: white;
			}
